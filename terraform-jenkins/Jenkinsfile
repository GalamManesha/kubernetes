pipeline {
  agent any

  environment {
    AWS_DEFAULT_REGION = 'us-east-1'
    TERRAFORM_DIR = 'terraform-jenkins'   // üëà folder containing your .tf files
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/GalamManesha/kubernetes.git'
      }
    }

    stage('Init & Plan') {
      steps {
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          sh '''
            cd ${TERRAFORM_DIR}
            terraform init -input=false
            terraform plan -out=tfplan -input=false
          '''
        }
      }
    }

    stage('Apply') {
      steps {
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          sh '''
            cd ${TERRAFORM_DIR}
            terraform apply -auto-approve tfplan
          '''
        }
      }
    }
  }

  post {
    success { echo "‚úÖ Terraform applied successfully!" }
    failure { echo "‚ùå Terraform pipeline failed!" }
  }
}
