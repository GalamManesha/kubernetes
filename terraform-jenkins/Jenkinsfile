pipeline {
  agent any

  environment {
    AWS_DEFAULT_REGION = 'us-east-1'
    TERRAFORM_BIN = '/usr/local/bin/terraform'
    TERRAFORM_DIR = 'terraform-jenkins'   // change if .tf in repo root
  }

  options {
    buildDiscarder(logRotator(daysToKeepStr: '14'))
    timeout(time: 60, unit: 'MINUTES')
    timestamps()
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/GalamManesha/kubernetes.git'
      }
    }

    stage('Locate Terraform') {
      steps {
        script {
          def tf = sh(script: "command -v terraform || echo ${TERRAFORM_BIN}", returnStdout: true).trim()
          env.TF_BIN = tf
        }
        sh "${env.TF_BIN} --version"
      }
    }

    // ---- INIT inside credentials so S3 backend can authenticate ----
    stage('Init') {
      steps {
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          sh """
            cd ${env.TERRAFORM_DIR}
            export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
            export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
            ${env.TF_BIN} init -input=false
          """.trim()
        }
      }
    }

    stage('Validate') {
      steps {
        sh "cd ${env.TERRAFORM_DIR} && ${env.TF_BIN} validate || true"
      }
    }

    stage('Plan') {
      steps {
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          sh """
            cd ${env.TERRAFORM_DIR}
            export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
            export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
            ${env.TF_BIN} plan -out=tfplan -input=false
          """.trim()
          sh "cd ${env.TERRAFORM_DIR} && ${env.TF_BIN} show -no-color tfplan"
          archiveArtifacts artifacts: "${env.TERRAFORM_DIR}/tfplan", onlyIfSuccessful: true
        }
      }
    }

    stage('Apply (auto)') {
      steps {
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          sh """
            cd ${env.TERRAFORM_DIR}
            export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
            export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
            ${env.TF_BIN} apply -auto-approve tfplan
          """.trim()
        }
      }
    }
  }

  post {
    success { echo "✅ Terraform completed successfully." }
    failure { echo "❌ Terraform failed — check console for details." }
    always  { echo "Finished at: ${new Date()}" }
  }
}
