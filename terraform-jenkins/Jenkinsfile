// Jenkinsfile - robust, short-lines, avoids multiline quoting issues
pipeline {
  agent any

  parameters {
    string(name: 'GIT_URL', defaultValue: 'https://github.com/GalamManesha/kubernetes.git', description: 'Git repository URL')
    string(name: 'GIT_BRANCH', defaultValue: 'main', description: 'Git branch to checkout')
    booleanParam(name: 'AUTO_APPLY', defaultValue: true, description: 'If true, terraform apply will run automatically. If false, pipeline waits for manual approval.')
  }

  environment {
    AWS_DEFAULT_REGION = 'us-east-1'
    TERRAFORM_BIN = "/usr/local/bin/terraform"
  }

  options {
    buildDiscarder(logRotator(daysToKeepStr: '7'))
    timeout(time: 60, unit: 'MINUTES')
    timestamps()
  }

  stages {
    stage('Checkout') {
      steps {
        echo "Checkout ${params.GIT_URL} (${params.GIT_BRANCH})"
        git branch: params.GIT_BRANCH, url: params.GIT_URL
      }
    }

    stage('Locate Terraform') {
      steps {
        script {
          def tf = sh(script: "command -v terraform || echo ${TERRAFORM_BIN}", returnStdout: true).trim()
          env.TF_BIN = tf
          echo "TF binary: ${env.TF_BIN}"
        }
        sh "${env.TF_BIN} --version"
      }
    }

    stage('Format') {
      steps {
        sh "set -e"
        sh "${env.TF_BIN} fmt -recursive || true"
      }
    }

    stage('Init') {
      steps {
        sh "set -e"
        sh "${env.TF_BIN} init -input=false"
      }
    }

    stage('Validate') {
      steps {
        sh "set -e"
        sh "${env.TF_BIN} validate || true"
      }
    }

    stage('Plan') {
      steps {
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          // initialize (again) with credentials
          sh "set -e"
          sh "export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}"
          sh "export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}"
          sh "${env.TF_BIN} init -input=false"

          // plan => binary file
          sh "${env.TF_BIN} plan -out=tfplan -input=false"

          // show human readable plan
          sh "echo '---- terraform show ----'"
          sh "${env.TF_BIN} show -no-color tfplan"

          // archive binary plan
          archiveArtifacts artifacts: 'tfplan', onlyIfSuccessful: true
        }
      }
    }

    stage('Apply — Manual') {
      when { expression { return params.AUTO_APPLY == false } }
      steps {
        script {
          def approver = input(id: 'ApproveApply', message: 'Approve terraform apply?', ok: 'Apply', parameters: [
            [$class: 'TextParameterDefinition', defaultValue: '', description: 'Optional note', name: 'NOTE']
          ])
          echo "Approved by: ${approver}"
        }
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          sh "set -e"
          sh "export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}"
          sh "export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}"
          sh "${env.TF_BIN} apply -auto-approve tfplan"
        }
      }
    }

    stage('Apply — Auto') {
      when { expression { return params.AUTO_APPLY == true } }
      steps {
        withCredentials([
          string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
          string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
        ]) {
          sh "set -e"
          sh "export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}"
          sh "export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}"
          sh "${env.TF_BIN} apply -auto-approve tfplan"
        }
      }
    }
  }

  post {
    success { echo "✅ Pipeline finished successfully." }
    failure { echo "❌ Pipeline failed — inspect console output." }
    always  { echo "Finished at: ${new Date()}" }
  }
}
